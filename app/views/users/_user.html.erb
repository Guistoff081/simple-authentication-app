
<li class="flex justify-between gap-x-6 py-5" id="<%= dom_id user %>">
    <div class="flex min-w-0 gap-x-4">
      <%= image_tag user.avatar.url, class: 'h-12 w-12 flex-none rounded-full bg-gray-50', alt: 'User Avatar' %>
      <div class="min-w-0 flex-auto">
        <p class="text-sm font-semibold leading-6 text-gray-900"><%= user.name %></p>
        <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= user.email %></p>
      </div>
    </div>
    <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
      <p class="text-sm leading-6 text-gray-900"><%= link_to "Edit", edit_user_path(user) %></p>
      <p class="mt-1 text-xs leading-5 text-gray-500"><%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %></p>
    </div>
</li>
